%div#search-projs
  = form_tag(search_path, :method => 'get') do
    .search-lbl= label_tag :search_string, 'Search:'
    = text_field_tag :search_string, (prev_search['search_string'] if prev_search), :placeholder => "optional search terms"
    = check_box_tag 'nonprofit', {:id => :nonprofit }, (prev_search['nonprofit'] if prev_search)
    .checkbox.inline= label_tag :nonprofit, 'Nonprofit'
    = check_box_tag 'five_01c3', {:id => :five_01c3 }, (prev_search['five_01c3'] if prev_search)
    .checkbox.inline= label_tag :five_01c3, '501(c)3'
    = check_box_tag 'forprofit', {:id => :forprofit }, (prev_search['forprofit'] if prev_search)
    .checkbox.inline= label_tag :forprofit, 'For profit'
    %button.btn.btn-primary.btn-small{:id=>"search-btn", :type => "submit"} Search
  = form_tag(projects_path, :method => 'get') do
    %button.btn.btn-small.btn-link{:type => "submit"} Clear    
