#project-issues.hero-section
  %ul.nav.nav-list
    .row-fluid
      .span8
        %li.nav-header Open Issues
      - if !(@openIssues.nil? or @openIssues.count < 1)
        .span4
          %li.view-all= link_to "View All...", issues_path(:project => @project, :resolved => 0)
    - if @openIssues.nil? or @openIssues.count < 1
      %li No Open Issues
    - else
      - @openIssues.each do |issue|
        / temp fix
        %li= truncate(issue.title, :length => 37, :separator => ' ')
        / %li= link_to truncate(issue.title, :length => 37, :separator => ' '), project_issue_path(@project.slug,issue.id)

    .row-fluid
      .span8
        %li.nav-header Pending issues
      - if !(@pendingIssues.nil? or @pendingIssues.count < 1)
        .span4
          %li.view-all= link_to "View All...", issues_path(:project => @project, :resolved => 1)
    - if @pendingIssues.nil? or @pendingIssues.count < 1
      %li No Pending Issues
    - else
      - @pendingIssues.each do |issue|
        / temp fix
        %li= truncate(issue.title, :length => 37, :separator => ' ')
        / %li= link_to truncate(issue.title, :length => 37, :separator => ' '), project_issue_path(@project.slug,issue.id)
      %li.view-all= link_to "View All...", issues_path(:project => @project, :resolved => 1)

    .row-fluid
      .span8
        %li.nav-header Resolved Issues
      - if !(@resolvedIssues.nil? or @resolvedIssues.count < 1)
        .span4
          %li.view-all= link_to "View All...", issues_path(:project => @project, :resolved => 2)
    - if @resolvedIssues.nil? or @resolvedIssues.count < 1
      %li No Resolved Issues
    - else
      - @resolvedIssues.each do |issue|
        %li= link_to truncate(issue.title, :length => 37, :separator => ' '), project_issue_path(@project.slug,issue.id)
      %li= link_to "View All...", issues_path(:project => @project, :resolved => 2)
  #create-issue-button
    %br
    %a{:class=>"btn btn-primary", :href=>new_project_issue_path(@project)} Create Issue
